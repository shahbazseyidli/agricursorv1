    if (!searchQuery.trim()) return;
    
    setIsSearching(true);
    setSearchError(null);
    setStreamingAnswer("");
    setChartData(null);

    try {
      if (responseMode === "chart") {
        // Chart mode - get structured data
        const response = await fetch("/api/ai/chart", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ query: searchQuery }),
        });

