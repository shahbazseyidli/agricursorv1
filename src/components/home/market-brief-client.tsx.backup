// Flag emoji helper
function getFlagEmoji(countryCode: string): string {
  if (!countryCode || countryCode.length !== 2) return "üè≥Ô∏è";
  const codePoints = countryCode
    .toUpperCase()
    .split("")
    .map((char) => 127397 + char.charCodeAt(0));
  return String.fromCodePoint(...codePoints);
}

